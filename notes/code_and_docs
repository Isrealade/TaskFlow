  UPDATE_TASK: 'UPDATE_TASK',
  DELETE_TASK: 'DELETE_TASK',
  UPDATE_FILTERS: 'UPDATE_FILTERS',
  UPDATE_SORT: 'UPDATE_SORT'
};

